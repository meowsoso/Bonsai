<!DOCTYPE html>
<html>
  <head>
    <title>Project1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= Gon::Base.render_data %>
    <%= cloudinary_js_config %>

  </head>

  <body>
  
  <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: rgba(86, 143, 197, 0.7);">
  <a class="navbar-brand navTitle" href="/garden">Bonsai</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <a class="nav-link navTitle" href="/">Home <span class="sr-only">(current)</span></a>
      </li>
  <% if @current_user.present? %>
      <li class="nav-item">
        <%= link_to "Edit Profile", edit_user_path, :class=> "nav-link" %>
        </li>
      <li class="nav-item">
        <%= link_to "Logout #{ @current_user.email }", login_path, :method => 'delete', :class=> "nav-link"  %>
      </li>    
      <% if @current_user.admin? %>     
      <li class="nav-item">
        <%= link_to "All users", users_path, :class=> "nav-link"  %>
      </li>
    <% end %>
  <% else %>
      <li class="nav-item">
        <%= link_to "Sign up", new_user_path , :class => "nav-link"%>
      </li>
      <li class="nav-item">
        <%= link_to "Sign in", login_path, :class => "nav-link" %>
      </li>  <% end %>
    </ul>
  </div>
</nav>


    <%= yield %>
  </body>
</html>
