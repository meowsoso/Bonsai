<div class="userBackground">

<div class="redMonkey">
</div>
<h1>Edit User</h1>


<div class="row">
    <div class="col col-md-8"></div>
    <div class="col col-md-3">
<%= form_for @user do |f| %>
<div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => "form-control" %>
 </div>
  <div class="form-group">  
    <%= f.label :email %>
    <%= f.email_field :email, :id => "exampleInputEmail1", :class => "form-control", :placeholder => "Enter email" %>
     </div>
 <div class="form-group">
    <%= f.label :team_id %>
    <%= f.select :team_id, Team.all.collect { |t| [t.name, t.id] } %>
     </div>
<div class="form-group" id="signUp">
    <%= f.submit "Update", :class => "btn btn-outline-info btn-sm" %>
    </div>
    </div>
    <div class="col col-md-3">
</div>
    <% end %>
    </div>