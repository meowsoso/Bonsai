<%= form_for @comment do |f| %>
<div class="row justify-content-md-center">
    <div class="col col-md-5">
    <div class="form-group">
    <%= f.label :content, "Comment" %>
    <%= f.text_field :content, :class => "form-control", :id => "exampleFormControlInput1" , :placeholder => "Express your feelings within 120 characters" %>
    </div>
    <div class="form-group">
    <%= f.label :category %>
    <%= f.select :category, options_for_select(["work", "human resource", "environment", "other"]), :class => 'form-control', :id => "exampleFormControlSelect1" %>
    </div>

<div class="form-check form-check-inline">
  <input class="form-check-input" type="radio" id="inlineRadio1" value="happy" name="comment[emotion]">
  <label class="form-check-label" for="emotion"><i class="fas fa-grin-squint fa-5x"></i></label>

</div>
<div class="form-check form-check-inline">
  <input class="form-check-input" type="radio" id="inlineRadio2" value="sad" name="comment[emotion]">
  <label class="form-check-label" for="emotion"><i class="fas fa-sad-tear fa-5x"></i></label>
</div>
<div class="form-check form-check-inline">
  <input class="form-check-input" type="radio" id="inlineRadio3" value="angry" name="comment[emotion]">
  <label class="form-check-label" for="emotion"><i class="fas fa-angry fa-5x"></i></label>
</div>
<div class="form-check form-check-inline">
  <input class="form-check-input" type="radio" id="inlineRadio4" value="alright" name="comment[emotion]">
  <label class="form-check-label" for="emotion"><i class="fas fa-meh fa-5x"></i></label>
</div>

    <div class="form-group">
    <%= f.label :score, "Stress level" %>
    <%= f.range_field :score, in: 1..10, :class => "form-control-range", :id => "formControlRange" %>
    </div>
    <%= f.submit %>
    </div>
    </div>


    <% end %>